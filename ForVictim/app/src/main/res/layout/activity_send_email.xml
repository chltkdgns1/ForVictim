<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@drawable/button_background"
        >

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="1"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:text="메일인증"
                android:textColor="#2BE319"
                android:textSize="20sp"
                />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="match_parent"
                android:text="안내입니다."
                android:textColor="#000000"
                android:textSize="20sp"
                />

        </LinearLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="안녕하세요.\nForVictiom을 이용해주셔서 진심으로 감사드립니다.\n아래 '메일 인증' 버튼을 클릭하여 개인 정보 수정을 해주세요. \n감사합니다."/>

        <Button
            android:id="@+id/Button_Email_Certification"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="#92EF89"
            android:text="메일인증"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/EditText_Email_Checked"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="이메일 인증 코드"
            android:background="@null"
            />

        <Button
            android:id="@+id/Button_Email_Same_Check"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="#92EF89"
            android:text="메일인증 완료"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            />
    </LinearLayout>

</LinearLayout>
